---
const { title, description } = Astro.props;
const base = Astro.site.pathname.endsWith('/') ? Astro.site.pathname : Astro.site.pathname + '/';
import SEO from '../components/SEO.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={`${base}favicon.png`} />
    <SEO title={title} description={description} />
    <style>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        background-color: #f9f9f9;
        color: #222;
      }
      header {
        background: #1a202c;
        color: #fff;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      nav a {
        color: #fff;
        margin-left: 1rem;
        text-decoration: none;
        font-weight: 500;
      }
      nav a:hover {
        text-decoration: underline;
      }
      main {
        padding: 2rem;
      }
      footer {
        margin-top: 4rem;
        padding: 2rem;
        background: #eee;
        text-align: center;
        font-size: 0.9rem;
        color: #555;
      }
    </style>
  </head>
  <body>
    <header>
      <div>
        <a href={base}>
          <img src={`${base}logo.png`} alt="Freelance Automator logo" style="height: 40px;" />
        </a>
      </div>
      <nav>
        <a href={base}>Home</a>
        <a href={`${base}blog/`}>Blog</a>
        <a href={`${base}about/`}>About</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Freelance Automator. All rights reserved.</p>
    </footer>
  </body>
</html>
