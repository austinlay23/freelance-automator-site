---
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body style="font-family: sans-serif; margin: 0; padding: 2rem;">
    <header style="margin-bottom: 2rem;">
      <h1>{title}</h1>
      <p style="font-size: 1rem; color: gray;">{description}</p>
    </header>

    <main>
      <slot />
    </main>

    <footer style="margin-top: 4rem; font-size: 0.9rem; color: #999;">
      <p>&copy; {new Date().getFullYear()} Freelance Automator. All rights reserved.</p>
    </footer>
  </body>
</html>
